@model Contact
@{
    ViewData["Title"] = "Create contact";
}
<div class="text-center">   
    <h1 class="display-4">Create contact</h1>  
</div>

<form asp-controller="Contact" asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter name">
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Enter e-mail">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="phone">Phone</label>
        <input type="text" asp-for="Phone" class="form-control" placeholder="Enter phone">
        @Html.ValidationMessageFor(x => x.Phone)
    </div>
    <br />
    <button type="submit" class="btn btn-primary col-12 mb-1">Create</button>
    <a class="btn btn-secondary col-12" asp-controller="Contact" asp-action="Index" role="button">Back</a>
</form>