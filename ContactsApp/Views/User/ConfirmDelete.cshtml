@model User
@{
    ViewData["Title"] = "Confirm user delete";
}

<div class="text-center">
    <h3>Do you really want to delete user @Model.Name?</h3>
</div>

<a class="btn btn-primary col-12 mb-1" role="button" asp-controller="User" asp-action="Index">Cancel delete</a>
<a class="btn btn-danger col-12" role="button" asp-controller="User" asp-action="Delete" asp-route-id="@Model.Id">Confirm delete</a>
