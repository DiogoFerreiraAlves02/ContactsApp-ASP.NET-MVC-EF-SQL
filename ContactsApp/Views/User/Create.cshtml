@using ContactsApp.Enums;
@model User
@{
    ViewData["Title"] = "Create user";
}
<div class="text-center">   
    <h1 class="display-4">Create user</h1>  
</div>

<form asp-controller="User" asp-action="Create" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter name">
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Enter e-mail">
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Enter login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="form-group">
        <label for="profile">Profile</label>
        <select asp-for="Profile" class="form-control">
            <option value="0">Select</option>
            <option value="@ProfileEnum.Admin">Admin</option>
            <option value="@ProfileEnum.Default">Default</option>
        </select>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Enter password">
        @Html.ValidationMessageFor(x => x.Password)
    </div>
    <br />
    <button type="submit" class="btn btn-primary col-12 mb-1">Create</button>
    <a class="btn btn-secondary col-12" asp-controller="User" asp-action="Index" role="button">Back</a>
</form>