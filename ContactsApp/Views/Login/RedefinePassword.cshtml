@model RedefinePasswordModel
@{
    Layout = "_LayoutLoggedOut";
    ViewData["Title"] = "Redefine Password";
}

@if (TempData["ErrorMessage"] != null) {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="Close">X</button>
            @TempData["ErrorMessage"]
        </div>
}

<form asp-controller="Login" asp-action="RedefinePassword" method="post">
  <div class="form-group mb-2">
    <label for="login">Login</label>
    <input type="text" asp-for="Login" class="form-control" id="login">
        @Html.ValidationMessageFor(x => x.Login)
  </div>
    <div class="form-group mb-3">
    <label for="email">Email</label>
    <input type="text" asp-for="Email" class="form-control" id="email">
        @Html.ValidationMessageFor(x => x.Email)
  </div>

  <button type="submit" class="btn btn-primary col-12 mb-2">Redefine Password</button>
  <a class="btn btn-secondary col-12" asp-controller="Login" asp-action="Index" role="button">Back</a>
</form>